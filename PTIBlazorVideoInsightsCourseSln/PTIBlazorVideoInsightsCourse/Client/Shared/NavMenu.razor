@using Microsoft.Extensions.Configuration
@inject Microsoft.Extensions.Localization.IStringLocalizer<NavMenu> Loc
@inject IConfiguration configuration
<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">
        <img src="@LogoUrl" style="height:30px; width:30px" />
    </a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> @Loc["LinkHome"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Videos">
                <span class="oi oi-list-rich" aria-hidden="true"></span> @Loc["LinkVideos"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Search">
                <span class="oi oi-list-rich" aria-hidden="true"></span> @Loc["LinkSearch"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Upload">
                <span class="oi oi-list-rich" aria-hidden="true"></span> @Loc["LinkUpload"]
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private string LogoUrl
    {
        get
        {
            return this.configuration["LogoUrl"];
        }
    }
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}
